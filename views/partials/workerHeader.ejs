<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/stylesheets/style.css" type="text/css">
    <!-- Font Awesome -->
    <script src="https://kit.fontawesome.com/dbaab9daf5.js" crossorigin="anonymous"></script>
</head>

<body>
    <% include ./notifications %>
    <header class="main_header">
        <div class="header_title">
            <a href="/worker">
                WORKFORCE <br>
                <span>WORKER</span>
            </a>
        </div>
        <div class="header_profile" id="header_profile">

            <a href="#" style="cursor: default;">
                <input type="checkbox" id="bell">
                <label for="bell">
                    <i class="fas fa-bell"></i>
                </label>
                <div class="header_profile_box header_profile_box--1" onclick="event.preventDefault()">
                    This Text Should Appear 1
                </div>
            </a>

            <a href="#" style="cursor: default;">
                <input type="checkbox" id="envelope">
                <label for="envelope">
                    <i class="fas fa-envelope"></i>
                </label>
                <div class="header_profile_box header_profile_box--2" onclick="event.preventDefault()">
                    This Text Should Appear 2
                </div>
            </a>

            <a href="" style="cursor: default;">
                <input type="checkbox" id="user">
                <label for="user">
                    <i class="fas fa-user"></i>
                </label>
                <div class="header_profile_box header_profile_box--3" onclick="event.preventDefault()">
                    <div class="profile_box-user">
                        <div class="profile_box-image">
                            <img src="https://upload.wikimedia.org/wikipedia/commons/4/49/Chris_Evans_-_Captain_America_2_press_conference_headshot.jpg"
                                alt="">
                        </div>
                        <br>
                        <%= currentUser.first_name + ' ' + currentUser.last_name %>
                        <%= currentUser.email_id %>

                        <div class="profile_box-manage" onclick="window.location.href = '/user/'">
                            Manage your Workforce Account
                        </div>
                    </div>
                    <div class="profile_box-sign_out" onclick="window.location.href = '/worker/logout'">
                        Sign out from Workforce
                    </div>
                    <div class="profile_box-about">
                        <!-- <a href="/about"> About </a> -->
                        <label for="about" onclick="window.location.href = '/about/'"> About </label>
                        <span> . </span>
                        <!-- <a href="/contactUs"> Contact Us </a> -->
                        <label for="contact_us" onclick="window.location.href = '/contactUs'"> Contact Us </label>
                    </div>
                </div>
            </a>
        </div>
    </header>